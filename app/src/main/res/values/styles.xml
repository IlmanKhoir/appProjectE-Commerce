<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Buttons -->
    <style name="App.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/brand_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Button.Secondary" parent="Widget.Material3.Button.TonalButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="App.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Cards -->
    <style name="App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Text appearances -->
    <style name="App.Text.Title" parent="TextAppearance.Material3.TitleLarge" />
    <style name="App.Text.Subtitle" parent="TextAppearance.Material3.TitleMedium" />
    <style name="App.Text.Body" parent="TextAppearance.Material3.BodyLarge" />
    <style name="App.Text.Caption" parent="TextAppearance.Material3.BodySmall" />

    <!-- Toolbar -->
    <style name="App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/brand_primary</item>
        <item name="titleTextColor">@color/brand_on_primary</item>
        <item name="subtitleTextColor">@color/brand_on_primary</item>
        <item name="navigationIconTint">@color/brand_on_primary</item>
    </style>
</resources>

